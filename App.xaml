<Application x:Class="NovaStayHotel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NovaStayHotel"
             xmlns:converters="clr-namespace:NovaStayHotel.Converters"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Latest Telerik Fluent Theme (2024) -->
                <ResourceDictionary Source="/Telerik.Windows.Themes.Fluent;component/Themes/System.Windows.xaml"/>
                <ResourceDictionary Source="/Telerik.Windows.Themes.Fluent;component/Themes/Telerik.Windows.Controls.xaml"/>
                <ResourceDictionary Source="/Telerik.Windows.Themes.Fluent;component/Themes/Telerik.Windows.Controls.Data.xaml"/>
                <ResourceDictionary Source="/Telerik.Windows.Themes.Fluent;component/Themes/Telerik.Windows.Controls.GridView.xaml"/>
                <ResourceDictionary Source="/Telerik.Windows.Themes.Fluent;component/Themes/Telerik.Windows.Controls.Input.xaml"/>
                <ResourceDictionary Source="/Telerik.Windows.Themes.Fluent;component/Themes/Telerik.Windows.Controls.Navigation.xaml"/>
                <ResourceDictionary Source="/Telerik.Windows.Themes.Fluent;component/Themes/Telerik.Windows.Controls.RibbonView.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Value Converters -->
            <!-- Room-specific converters -->
            <converters:BoolToYesNoConverter x:Key="BoolToYesNoConverter"/>
            <converters:RoomStatusToBrushConverter x:Key="RoomStatusToBrushConverter"/>
            <converters:PriceToFormattedStringConverter x:Key="PriceToFormattedStringConverter"/>
            <converters:DateTimeToFormattedStringConverter x:Key="DateTimeToFormattedStringConverter"/>
            <converters:EnumToDisplayStringConverter x:Key="EnumToDisplayStringConverter"/>

            <!-- Guest-specific converters -->
            <converters:BoolToGenderIndexConverter x:Key="BoolToGenderIndexConverter"/>
            <converters:NationalityToStringConverter x:Key="NationalityToStringConverter"/>
            <converters:DateOnlyToDateTimeConverter x:Key="DateOnlyToDateTimeConverter"/>
            <converters:AgeToStringConverter x:Key="AgeToStringConverter"/>
            <converters:GenderToBrushConverter x:Key="GenderToBrushConverter"/>
            <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>

            <!-- Reservation-specific converters -->
            <converters:ReservationStatusToBrushConverter x:Key="ReservationStatusToBrushConverter"/>
            <converters:PaymentMethodToStringConverter x:Key="PaymentMethodToStringConverter"/>
            <converters:ReservationStatusToStringConverter x:Key="ReservationStatusToStringConverter"/>

            <!-- Common converters -->
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
            <converters:InvertBooleanConverter x:Key="InvertBooleanConverter"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <!-- Global Styles -->
            <Style x:Key="ModernButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#2E86AB"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1E5F7A"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Background" Value="#0E3F5A"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="FilterHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="#555"/>
                <Setter Property="Margin" Value="0,10,0,5"/>
            </Style>

            <Style x:Key="FilterControlStyle" TargetType="Control">
                <Setter Property="Margin" Value="0,0,0,10"/>
                <Setter Property="Height" Value="25"/>
            </Style>

            <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="#888"/>
                <Setter Property="Margin" Value="0,15,0,10"/>
                <Setter Property="Text" Value="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"/>
            </Style>

            <!-- DataGrid Row Styles -->
            <Style x:Key="AlternatingRowStyle" TargetType="telerik:GridViewRow">
                <Setter Property="Background" Value="White"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#F0F8FF"/>
                    </Trigger>
                    <MultiTrigger>
                        <MultiTrigger.Conditions>
                            <Condition Property="IsSelected" Value="True"/>
                        </MultiTrigger.Conditions>
                        <Setter Property="Background" Value="#E3F2FD"/>
                        <Setter Property="BorderBrush" Value="#2196F3"/>
                        <Setter Property="BorderThickness" Value="1"/>
                    </MultiTrigger>
                </Style.Triggers>
            </Style>

            <!-- Status/Gender Indicator Styles -->
            <Style x:Key="StatusDotStyle" TargetType="Ellipse">
                <Setter Property="Width" Value="10"/>
                <Setter Property="Height" Value="10"/>
                <Setter Property="Margin" Value="5,0"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Status}" Value="Available">
                        <Setter Property="Fill" Value="#4CAF50"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status}" Value="Occupied">
                        <Setter Property="Fill" Value="#F44336"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status}" Value="Reserved">
                        <Setter Property="Fill" Value="#FF9800"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status}" Value="UnderMaintenance">
                        <Setter Property="Fill" Value="#FFC107"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status}" Value="OutOfService">
                        <Setter Property="Fill" Value="#9E9E9E"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="GenderDotStyle" TargetType="Ellipse">
                <Setter Property="Width" Value="10"/>
                <Setter Property="Height" Value="10"/>
                <Setter Property="Margin" Value="5,0"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsMale}" Value="True">
                        <Setter Property="Fill" Value="#2196F3"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding IsMale}" Value="False">
                        <Setter Property="Fill" Value="#E91E63"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <!-- Reservation Status Dot Style -->
            <Style x:Key="ReservationStatusDotStyle" TargetType="Ellipse">
                <Setter Property="Width" Value="10"/>
                <Setter Property="Height" Value="10"/>
                <Setter Property="Margin" Value="5,0"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Status}" Value="Created">
                        <Setter Property="Fill" Value="#2196F3"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status}" Value="CheckedIn">
                        <Setter Property="Fill" Value="#4CAF50"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status}" Value="CheckedOut">
                        <Setter Property="Fill" Value="#9E9E9E"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status}" Value="Canceled">
                        <Setter Property="Fill" Value="#F44336"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <!-- Filter Panel Style -->
            <Style x:Key="FilterPanelStyle" TargetType="Border">
                <Setter Property="Background" Value="#FAFAFA"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="5"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="0,0,10,0"/>
            </Style>

            <!-- Custom TextBox Style -->
            <Style x:Key="FilterTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource FilterControlStyle}">
                <Setter Property="Padding" Value="5"/>
                <Setter Property="BorderBrush" Value="#CCC"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="BorderBrush" Value="#2E86AB"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Custom ComboBox Style -->
            <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource FilterControlStyle}">
                <Setter Property="Padding" Value="5"/>
                <Setter Property="BorderBrush" Value="#CCC"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <!-- Header Panel Style -->
            <Style x:Key="HeaderPanelStyle" TargetType="Border">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#2E86AB" Offset="0"/>
                            <GradientStop Color="#1E5F7A" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="CornerRadius" Value="5,5,0,0"/>
                <Setter Property="Padding" Value="15,10"/>
            </Style>

            <!-- Form Input Styles for Add/Edit Windows -->
            <Style x:Key="FormLabelStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Margin" Value="0,10,0,5"/>
                <Setter Property="Foreground" Value="#333"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>

            <Style x:Key="FormInputStyle" TargetType="Control">
                <Setter Property="Height" Value="32"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="BorderBrush" Value="#DDD"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="FontSize" Value="12"/>
                <Style.Triggers>
                    <Trigger Property="IsKeyboardFocused" Value="True">
                        <Setter Property="BorderBrush" Value="#2E86AB"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Validation Error Style -->
            <Style x:Key="ValidationErrorStyle" TargetType="Border">
                <Setter Property="Background" Value="#FFF3CD"/>
                <Setter Property="BorderBrush" Value="#FFEAA7"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="3"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="0,15,0,0"/>
            </Style>

            <!-- Success/Error Message Styles -->
            <Style x:Key="SuccessMessageStyle" TargetType="Border">
                <Setter Property="Background" Value="#D4EDDA"/>
                <Setter Property="BorderBrush" Value="#C3E6CB"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="3"/>
                <Setter Property="Padding" Value="10"/>
            </Style>

            <Style x:Key="ErrorMessageStyle" TargetType="Border">
                <Setter Property="Background" Value="#F8D7DA"/>
                <Setter Property="BorderBrush" Value="#F5C6CB"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="3"/>
                <Setter Property="Padding" Value="10"/>
            </Style>

            <!-- Reservation-specific styles -->
            <Style x:Key="ReservationActionButtonStyle" TargetType="Button">
                <Setter Property="Margin" Value="2,1"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FontSize" Value="9"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.8"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Payment status indicator style -->
            <Style x:Key="PaymentStatusStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="11"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsPaid}" Value="True">
                        <Setter Property="Foreground" Value="Green"/>
                        <Setter Property="Text" Value="PAID"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding IsPaid}" Value="False">
                        <Setter Property="Foreground" Value="Red"/>
                        <Setter Property="Text" Value="UNPAID"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>