<UserControl x:Class="NovaStayHotel.Views.ReservationListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">

    <UserControl.Resources>
        <!-- Status color converter -->
        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Created">
                    <Setter Property="Fill" Value="Blue"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="CheckedIn">
                    <Setter Property="Fill" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="CheckedOut">
                    <Setter Property="Fill" Value="Gray"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Canceled">
                    <Setter Property="Fill" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Multi-select ListBox Style -->
        <Style x:Key="MultiSelectListBoxStyle" TargetType="ListBox">
            <Setter Property="SelectionMode" Value="Multiple"/>
            <Setter Property="MaxHeight" Value="80"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Date picker style -->
        <Style x:Key="FilterDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Filter TextBox Style -->
        <Style x:Key="FilterTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Navigation -->
        <telerik:RadRibbonView Grid.Row="0" Height="120">
            <telerik:RadRibbonTab Header="Home">
                <telerik:RadRibbonGroup Header="Navigation">
                    <telerik:RadRibbonButton Text="Dashboard" 
                                           Command="{Binding NavigateToHomeCommand}" 
                                           Size="Large"/>
                    <telerik:RadRibbonButton Text="Guests" Size="Medium"/>
                    <telerik:RadRibbonButton Text="Rooms" Size="Medium"/>
                </telerik:RadRibbonGroup>
            </telerik:RadRibbonTab>

            <telerik:RadRibbonTab Header="Reservations" IsSelected="True">
                <telerik:RadRibbonGroup Header="Reservation Actions">
                    <telerik:RadRibbonButton Text="Add Reservation" 
                                           Command="{Binding AddReservationCommand}"
                                           Size="Large"/>
                    <telerik:RadRibbonButton Text="Edit Reservation" 
                                           Command="{Binding EditReservationCommand}"
                                           Size="Medium"
                                           IsEnabled="{Binding SelectedReservation, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter='Boolean'}"/>
                    <!-- FIXED: Corrected property name from SelectedReservatiown to SelectedReservation -->
                    <telerik:RadRibbonButton Text="Delete Reservation" 
                                           Command="{Binding DeleteReservationCommand}"
                                           Size="Medium"
                                           IsEnabled="{Binding SelectedReservation, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter='Boolean'}"/>
                </telerik:RadRibbonGroup>
                <telerik:RadRibbonGroup Header="Guest Management">
                    <telerik:RadRibbonButton Text="Check In" 
                                           Command="{Binding CheckInCommand}"
                                           Size="Medium"/>
                    <telerik:RadRibbonButton Text="Check Out" 
                                           Command="{Binding CheckOutCommand}"
                                           Size="Medium"/>
                    <telerik:RadRibbonButton Text="Cancel Reservation" 
                                           Command="{Binding CancelReservationCommand}"
                                           Size="Medium"/>
                </telerik:RadRibbonGroup>
                <telerik:RadRibbonGroup Header="Data">
                    <!-- FIXED: Changed from RefreshReservationCommand to RefreshCommand -->
                    <telerik:RadRibbonButton Text="Refresh" 
                                           Command="{Binding RefreshCommand}"
                                           Size="Medium"/>
                    <telerik:RadRibbonButton Text="Export" Size="Medium"/>
                </telerik:RadRibbonGroup>
            </telerik:RadRibbonTab>
        </telerik:RadRibbonView>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Filter Panel -->
            <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="5" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Reservation Filters" FontSize="16" FontWeight="Bold" 
                                 Foreground="#2E86AB" Margin="0,0,0,15"/>

                        <!-- Basic Filters -->
                        <TextBlock Text="BASIC FILTERS" FontSize="12" FontWeight="Bold" 
                                 Foreground="Gray" Margin="0,0,0,5"/>

                        <!-- Guest Filter -->
                        <TextBlock Text="Guest" Margin="0,0,0,3"/>
                        <ComboBox ItemsSource="{Binding AvailableGuests}"
                                SelectedItem="{Binding SelectedGuest}"
                                DisplayMemberPath="Name"
                                Height="25" Margin="0,0,0,10"/>

                        <!-- Room Filter -->
                        <TextBlock Text="Room" Margin="0,0,0,3"/>
                        <ComboBox ItemsSource="{Binding AvailableRooms}"
                                SelectedItem="{Binding SelectedRoom}"
                                Height="25" Margin="0,0,0,10">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Room {0}">
                                                <Binding Path="Number"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- Active Status -->
                        <TextBlock Text="Active Status" Margin="0,0,0,3"/>
                        <ComboBox ItemsSource="{Binding ActiveOptions}"
                                SelectedIndex="{Binding ActiveSelectedIndex}"
                                Height="25" Margin="0,0,0,10"/>

                        <!-- Payment Status -->
                        <TextBlock Text="Payment Status" Margin="0,0,0,3"/>
                        <ComboBox ItemsSource="{Binding PaidOptions}"
                                SelectedIndex="{Binding PaidSelectedIndex}"
                                Height="25" Margin="0,0,0,15"/>

                        <!-- Date Filters -->
                        <TextBlock Text="DATE FILTERS" FontSize="12" FontWeight="Bold" 
                                 Foreground="Gray" Margin="0,0,0,5"/>

                        <!-- Check-in Date Range -->
                        <TextBlock Text="Check-in Date Range" Margin="0,0,0,3"/>
                        <TextBlock Text="From:" FontSize="10" Margin="0,0,0,2"/>
                        <DatePicker SelectedDate="{Binding CheckInBookingFrom, Converter={StaticResource DateOnlyToDateTimeConverter}}"
                                  Style="{StaticResource FilterDatePickerStyle}"/>
                        <TextBlock Text="To:" FontSize="10" Margin="0,0,0,2"/>
                        <DatePicker SelectedDate="{Binding CheckInBookingTo, Converter={StaticResource DateOnlyToDateTimeConverter}}"
                                  Style="{StaticResource FilterDatePickerStyle}" 
                                  Margin="0,0,0,10"/>

                        <!-- Check-out Date Range -->
                        <TextBlock Text="Check-out Date Range" Margin="0,0,0,3"/>
                        <TextBlock Text="From:" FontSize="10" Margin="0,0,0,2"/>
                        <DatePicker SelectedDate="{Binding CheckOutBookingFrom, Converter={StaticResource DateOnlyToDateTimeConverter}}"
                                  Style="{StaticResource FilterDatePickerStyle}"/>
                        <TextBlock Text="To:" FontSize="10" Margin="0,0,0,2"/>
                        <DatePicker SelectedDate="{Binding CheckOutBookingTo, Converter={StaticResource DateOnlyToDateTimeConverter}}"
                                  Style="{StaticResource FilterDatePickerStyle}" 
                                  Margin="0,0,0,15"/>

                        <!-- Advanced Filters -->
                        <TextBlock Text="ADVANCED FILTERS" FontSize="12" FontWeight="Bold" 
                                 Foreground="Gray" Margin="0,0,0,5"/>

                        <!-- Amount Range -->
                        <TextBlock Text="Amount Range ($)" Margin="0,0,0,3"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox Text="{Binding MinAmount, UpdateSourceTrigger=PropertyChanged, StringFormat='{}{0:F2}'}" 
                                   Width="70" Style="{StaticResource FilterTextBoxStyle}"
                                   ToolTip="Min Amount"/>
                            <TextBlock Text=" - " VerticalAlignment="Center" Margin="5,0"/>
                            <TextBox Text="{Binding MaxAmount, UpdateSourceTrigger=PropertyChanged, StringFormat='{}{0:F2}'}" 
                                   Width="70" Style="{StaticResource FilterTextBoxStyle}"
                                   ToolTip="Max Amount"/>
                        </StackPanel>

                        <!-- Status (Multi Select) -->
                        <TextBlock Text="Reservation Status (Multi-select)" Margin="0,0,0,3"/>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Margin="0,0,0,10">
                            <ListBox ItemsSource="{Binding ReservationStatuses}"
                                   Style="{StaticResource MultiSelectListBoxStyle}">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <CheckBox Content="{Binding DisplayName}" 
                                                            IsChecked="{Binding IsSelected}"
                                                            Margin="2" Padding="5,2"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Border>

                        <!-- Payment Method (Multi Select) -->
                        <TextBlock Text="Payment Method (Multi-select)" Margin="0,0,0,3"/>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Margin="0,0,0,15">
                            <ListBox ItemsSource="{Binding PaymentMethods}"
                                   Style="{StaticResource MultiSelectListBoxStyle}">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <CheckBox Content="{Binding DisplayName}" 
                                                            IsChecked="{Binding IsSelected}"
                                                            Margin="2" Padding="5,2"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Border>

                        <!-- Active Filters Summary -->
                        <Border Background="#E8F4FD" BorderBrush="#2E86AB" BorderThickness="1" 
                              CornerRadius="3" Padding="8" Margin="0,0,0,10"
                              Visibility="{Binding HasActiveFilters, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Active Filters:" FontWeight="Bold" FontSize="11" Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding ActiveFiltersText}" FontSize="10" TextWrapping="Wrap" 
                                         Foreground="#2E86AB"/>
                            </StackPanel>
                        </Border>

                        <!-- FIXED: Changed command name from SearchReservationCommand to SearchCommand -->
                        <Button Content="Search" 
                              Command="{Binding SearchCommand}"
                              Background="#2E86AB" Foreground="White"
                              Padding="10,5" Margin="0,5,0,0"
                              BorderThickness="0" Cursor="Hand"
                              FontWeight="Bold"/>

                        <!-- FIXED: Changed command name from ClearFiltersReservationCommand to ClearFiltersCommand -->
                        <Button Content="Clear Filters" 
                              Command="{Binding ClearFiltersCommand}"
                              Background="#E74C3C" Foreground="White"
                              Padding="10,5" Margin="0,10,0,0"
                              BorderThickness="0" Cursor="Hand"/>

                        <!-- Filter Count -->
                        <TextBlock Text="{Binding FilteredReservationsCount, StringFormat='Showing {0} reservations'}" 
                                 HorizontalAlignment="Center" Margin="0,10,0,0"
                                 FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Reservations Data Grid -->
            <Border Grid.Column="1" Background="White" CornerRadius="5" 
                  BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#2E86AB" CornerRadius="5,5,0,0">
                        <Grid Margin="15,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Reservation Management" 
                                         FontSize="20" FontWeight="Bold" 
                                         Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Reservations.Count, StringFormat=' ({0} reservations)'}" 
                                         FontSize="14" Foreground="#B0E0E6" 
                                         VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Data Grid -->
                    <telerik:RadGridView Grid.Row="1" 
                                       ItemsSource="{Binding ReservationsView}"
                                       SelectedItem="{Binding SelectedReservation}"
                                       AutoGenerateColumns="False"
                                       CanUserFreezeColumns="False"
                                       ShowGroupPanel="False"
                                       IsReadOnly="True"
                                       Margin="0,5,0,0">

                        <telerik:RadGridView.Columns>
                            <!-- Guest -->
                            <telerik:GridViewDataColumn Header="Guest" 
                                                      DataMemberBinding="{Binding GuestDisplayName}"
                                                      Width="150"
                                                      IsFilterable="False"/>

                            <!-- Room -->
                            <telerik:GridViewDataColumn Header="Room" 
                                                      DataMemberBinding="{Binding RoomDisplayName}"
                                                      Width="80"
                                                      IsFilterable="False"
                                                      TextAlignment="Center"/>

                            <!-- Check-in Date -->
                            <telerik:GridViewDataColumn Header="Check-in" 
                                                      DataMemberBinding="{Binding CheckInBookingDateFormatted}"
                                                      Width="100"
                                                      IsFilterable="False"
                                                      TextAlignment="Center"/>

                            <!-- Check-out Date -->
                            <telerik:GridViewDataColumn Header="Check-out" 
                                                      DataMemberBinding="{Binding CheckOutBookingDateFormatted}"
                                                      Width="100"
                                                      IsFilterable="False"
                                                      TextAlignment="Center"/>

                            <!-- Status with Color Indicator -->
                            <telerik:GridViewColumn Header="Status" Width="120" IsFilterable="False">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Style="{StaticResource StatusIndicatorStyle}"/>
                                            <TextBlock Text="{Binding StatusFormatted}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>

                            <!-- Amount -->
                            <telerik:GridViewDataColumn Header="Amount" 
                                                      DataMemberBinding="{Binding FinalAmountUsdFormatted}"
                                                      Width="100"
                                                      IsFilterable="False"
                                                      TextAlignment="Right"/>

                            <!-- Payment Status -->
                            <telerik:GridViewColumn Header="Payment" Width="90" IsFilterable="False">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Ellipse Width="8" Height="8" Margin="2,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                                <Setter Property="Fill" Value="Green"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsPaid}" Value="False">
                                                                <Setter Property="Fill" Value="Red"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock Text="{Binding IsPaid, Converter={StaticResource BoolToYesNoConverter}}" 
                                                     FontSize="10" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>

                            <!-- Active Status -->
                            <telerik:GridViewColumn Header="Active" Width="60" IsFilterable="False">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToYesNoConverter}}" 
                                                 TextAlignment="Center" VerticalAlignment="Center"
                                                 FontSize="10"/>
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>

                            <!-- Actions Column -->
                            <telerik:GridViewColumn Header="Actions" Width="150" IsFilterable="False">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Edit" 
                                                  Click="EditButton_Click"
                                                  Width="40" Height="25" Margin="1"
                                                  Background="#2E86AB"
                                                  Foreground="White" BorderThickness="0"
                                                  FontSize="9"/>
                                            <Button Content="Del" 
                                                  Click="DeleteButton_Click"
                                                  Width="30" Height="25" Margin="1"
                                                  Background="#E74C3C" Foreground="White" 
                                                  BorderThickness="0" FontSize="9"/>
                                            <Button Content="In" 
                                                  Click="CheckInButton_Click"
                                                  Width="25" Height="25" Margin="1"
                                                  Background="#28A745" Foreground="White" 
                                                  BorderThickness="0" FontSize="9"
                                                  ToolTip="Check In"/>
                                            <Button Content="Out" 
                                                  Click="CheckOutButton_Click"
                                                  Width="30" Height="25" Margin="1"
                                                  Background="#FFC107" Foreground="Black" 
                                                  BorderThickness="0" FontSize="9"
                                                  ToolTip="Check Out"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>
                        </telerik:RadGridView.Columns>

                        <!-- Row Details Template for expanded view -->
                        <telerik:RadGridView.RowDetailsTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA" Padding="20" Margin="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Reservation Details" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                            <TextBlock Text="{Binding StringFormat='Base Amount: ${0:F2}', Path=BaseAmountUsd}" Margin="0,2"/>
                                            <TextBlock Text="{Binding StringFormat='Discount: {0}%', Path=DiscountRateFormatted}" Margin="0,2"/>
                                            <TextBlock Text="{Binding StringFormat='Final Amount: ${0:F2}', Path=FinalAmountUsd}" Margin="0,2" FontWeight="Bold"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Payment Details" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                            <TextBlock Text="{Binding StringFormat='Payment Method: {0}', Path=PaymentMethodFormatted}" Margin="0,2"/>
                                            <TextBlock Text="{Binding StringFormat='Payment Status: {0}', Path=IsPaid}" Margin="0,2"/>
                                            <TextBlock Text="{Binding StringFormat='Active: {0}', Path=IsActive}" Margin="0,2"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Quick Actions" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                            <Button Content="Check In Guest" 
                                                  Command="{Binding DataContext.CheckInCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  Margin="0,2" Padding="5" Background="#28A745" Foreground="White"/>
                                            <Button Content="Check Out Guest" 
                                                  Command="{Binding DataContext.CheckOutCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  Margin="0,2" Padding="5" Background="#FFC107" Foreground="Black"/>
                                            <Button Content="Cancel Reservation" 
                                                  Command="{Binding DataContext.CancelReservationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  Margin="0,2" Padding="5" Background="#DC3545" Foreground="White"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </telerik:RadGridView.RowDetailsTemplate>
                    </telerik:RadGridView>

                    <!-- Loading Overlay -->
                    <Border Grid.Row="1" Background="#80000000" 
                          Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <telerik:RadBusyIndicator IsBusy="{Binding IsLoading}" 
                                                    Content="Loading reservations..."
                                                    Foreground="White"
                                                    FontSize="16"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>