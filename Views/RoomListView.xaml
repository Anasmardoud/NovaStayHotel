<UserControl x:Class="NovaStayHotel.Views.RoomListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">

    <UserControl.Resources>
        <!-- Status color converter -->
        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Available">
                    <Setter Property="Fill" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Occupied">
                    <Setter Property="Fill" Value="Red"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Reserved">
                    <Setter Property="Fill" Value="Orange"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="UnderMaintenance">
                    <Setter Property="Fill" Value="Yellow"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="OutOfService">
                    <Setter Property="Fill" Value="Gray"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Multi-select ListBox Style -->
        <Style x:Key="MultiSelectListBoxStyle" TargetType="ListBox">
            <Setter Property="SelectionMode" Value="Multiple"/>
            <Setter Property="MaxHeight" Value="100"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Numeric TextBox Style with validation -->
        <Style x:Key="NumericTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="3"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Navigation -->
        <telerik:RadRibbonView Grid.Row="0" Height="120">
            <telerik:RadRibbonTab Header="Home">
                <telerik:RadRibbonGroup Header="Navigation">
                    <telerik:RadRibbonButton Text="Dashboard" 
                                           Command="{Binding NavigateToHomeCommand}" 
                                           Size="Large"/>
                    <telerik:RadRibbonButton Text="Guests" Size="Medium"/>
                    <telerik:RadRibbonButton Text="Reservations" Size="Medium"/>
                </telerik:RadRibbonGroup>
            </telerik:RadRibbonTab>

            <telerik:RadRibbonTab Header="Rooms" IsSelected="True">
                <telerik:RadRibbonGroup Header="Room Actions">
                    <telerik:RadRibbonButton Text="Add Room" 
                                           Command="{Binding AddRoomCommand}"
                                           Size="Large"/>
                    <telerik:RadRibbonButton Text="Edit Room" 
                                           Command="{Binding EditRoomCommand}"
                                           Size="Medium"
                                           IsEnabled="{Binding SelectedRoom, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter='Boolean'}"/>
                    <telerik:RadRibbonButton Text="Delete Room" 
                                           Command="{Binding DeleteRoomCommand}"
                                           Size="Medium"
                                           IsEnabled="{Binding SelectedRoom, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter='Boolean'}"/>
                </telerik:RadRibbonGroup>
                <telerik:RadRibbonGroup Header="Maintenance">
                    <telerik:RadRibbonButton Text="Set Maintenance" 
                                           Command="{Binding SetMaintenanceCommand}"
                                           Size="Medium"/>
                    <telerik:RadRibbonButton Text="Complete Maintenance" 
                                           Command="{Binding CompleteMaintenanceCommand}"
                                           Size="Medium"/>
                </telerik:RadRibbonGroup>
                <telerik:RadRibbonGroup Header="Data">
                    <telerik:RadRibbonButton Text="Refresh" 
                                           Command="{Binding RefreshCommand}"
                                           Size="Medium"/>
                    <telerik:RadRibbonButton Text="Export" Size="Medium"/>
                </telerik:RadRibbonGroup>
            </telerik:RadRibbonTab>
        </telerik:RadRibbonView>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Filter Panel -->
            <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="5" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Room Filters" FontSize="16" FontWeight="Bold" 
                                 Foreground="#2E86AB" Margin="0,0,0,15"/>

                        <!-- Basic Filters -->
                        <TextBlock Text="BASIC" FontSize="12" FontWeight="Bold" 
                                 Foreground="Gray" Margin="0,0,0,5"/>

                        <!-- Room Number Range with validation -->
                        <TextBlock Text="Room Number (1-200)" Margin="0,0,0,3"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox Text="{Binding MinRoomNumber, UpdateSourceTrigger=PropertyChanged}" 
                                   Width="60" Style="{StaticResource NumericTextBoxStyle}"
                                   ToolTip="Min Room Number (1-200)"/>
                            <TextBlock Text=" - " VerticalAlignment="Center" Margin="5,0"/>
                            <TextBox Text="{Binding MaxRoomNumber, UpdateSourceTrigger=PropertyChanged}" 
                                   Width="60" Style="{StaticResource NumericTextBoxStyle}"
                                   ToolTip="Max Room Number (1-200)"/>
                        </StackPanel>

                        <!-- Floor Range with validation -->
                        <TextBlock Text="Floor Range (0-20)" Margin="0,0,0,3"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox Text="{Binding MinFloorNumber, UpdateSourceTrigger=PropertyChanged}" 
                                   Width="60" Style="{StaticResource NumericTextBoxStyle}"
                                   ToolTip="Min Floor (0-20)"/>
                            <TextBlock Text=" - " VerticalAlignment="Center" Margin="5,0"/>
                            <TextBox Text="{Binding MaxFloorNumber, UpdateSourceTrigger=PropertyChanged}" 
                                   Width="60" Style="{StaticResource NumericTextBoxStyle}"
                                   ToolTip="Max Floor (0-20)"/>
                        </StackPanel>

                        <!-- Type (Multi Select) -->
                        <TextBlock Text="Room Types (Multi-select)" Margin="0,0,0,3"/>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Margin="0,0,0,10">
                            <ListBox ItemsSource="{Binding RoomTypes}"
                                   Style="{StaticResource MultiSelectListBoxStyle}"
                                   MaxHeight="80">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <CheckBox Content="{Binding DisplayName}" 
                                                            IsChecked="{Binding IsSelected}"
                                                            Margin="2" Padding="5,2"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Border>

                        <!-- Status (Multi Select) -->
                        <TextBlock Text="Room Status (Multi-select)" Margin="0,0,0,3"/>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Margin="0,0,0,15">
                            <ListBox ItemsSource="{Binding RoomStatuses}"
                                   Style="{StaticResource MultiSelectListBoxStyle}"
                                   MaxHeight="100">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <CheckBox Content="{Binding DisplayName}" 
                                                            IsChecked="{Binding IsSelected}"
                                                            Margin="2" Padding="5,2"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Border>

                        <!-- Details -->
                        <TextBlock Text="DETAILS" FontSize="12" FontWeight="Bold" 
                                 Foreground="Gray" Margin="0,0,0,5"/>

                        <!-- Price Range with validation -->
                        <TextBlock Text="Price Range ($0 - $100,000)" Margin="0,0,0,3"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox Text="{Binding MinPrice, UpdateSourceTrigger=PropertyChanged, StringFormat='{}{0:F2}'}" 
                                   Width="70" Style="{StaticResource NumericTextBoxStyle}"
                                   ToolTip="Min Price ($0 - $100,000)"/>
                            <TextBlock Text=" - " VerticalAlignment="Center" Margin="5,0"/>
                            <TextBox Text="{Binding MaxPrice, UpdateSourceTrigger=PropertyChanged, StringFormat='{}{0:F2}'}" 
                                   Width="70" Style="{StaticResource NumericTextBoxStyle}"
                                   ToolTip="Max Price ($0 - $100,000)"/>
                        </StackPanel>

                        <!-- Has Balcony -->
                        <TextBlock Text="Has Balcony" Margin="0,0,0,3"/>
                        <ComboBox ItemsSource="{Binding BalconyOptions}"
                                SelectedIndex="{Binding HasBalconySelectedIndex}"
                                Padding="5" Margin="0,0,0,15"/>

                        <!-- Active Filters Summary -->
                        <Border Background="#E8F4FD" BorderBrush="#2E86AB" BorderThickness="1" 
                              CornerRadius="3" Padding="8" Margin="0,0,0,10"
                              Visibility="{Binding HasActiveFilters, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Active Filters:" FontWeight="Bold" FontSize="11" Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding ActiveFiltersText}" FontSize="10" TextWrapping="Wrap" 
                                         Foreground="#2E86AB"/>
                            </StackPanel>
                        </Border>

                        <!-- Search Button -->
                        <Button Content="Search" 
                              Command="{Binding SearchCommand}"
                              Background="#2E86AB" Foreground="White"
                              Padding="10,5" Margin="0,5,0,0"
                              BorderThickness="0" Cursor="Hand"
                              FontWeight="Bold"/>

                        <!-- Clear Filters Button -->
                        <Button Content="Clear Filters" 
                              Command="{Binding ClearFiltersCommand}"
                              Background="#E74C3C" Foreground="White"
                              Padding="10,5" Margin="0,10,0,0"
                              BorderThickness="0" Cursor="Hand"/>

                        <!-- Filter Count -->
                        <TextBlock Text="{Binding FilteredRoomsCount, StringFormat='Showing {0} rooms'}" 
                                 HorizontalAlignment="Center" Margin="0,10,0,0"
                                 FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Rooms Data Grid -->
            <Border Grid.Column="1" Background="White" CornerRadius="5" 
                  BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#2E86AB" CornerRadius="5,5,0,0">
                        <Grid Margin="15,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Room Management" 
                                         FontSize="20" FontWeight="Bold" 
                                         Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Rooms.Count, StringFormat=' ({0} rooms)'}" 
                                         FontSize="14" Foreground="#B0E0E6" 
                                         VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Data Grid -->
                    <telerik:RadGridView Grid.Row="1" 
                                       ItemsSource="{Binding RoomsView}"
                                       SelectedItem="{Binding SelectedRoom}"
                                       AutoGenerateColumns="False"
                                       CanUserFreezeColumns="False"
                                       ShowGroupPanel="False"
                                       IsReadOnly="True"
                                       Margin="0,5,0,0">

                        <telerik:RadGridView.Columns>
                            <!-- Room Number -->
                            <telerik:GridViewDataColumn Header="Room #" 
                                                      DataMemberBinding="{Binding Number}"
                                                      Width="80"
                                                      IsFilterable="False"
                                                      TextAlignment="Center"/>

                            <!-- Floor -->
                            <telerik:GridViewDataColumn Header="Floor" 
                                                      DataMemberBinding="{Binding FloorNumber}"
                                                      Width="60"
                                                      IsFilterable="False"
                                                      TextAlignment="Center"/>

                            <!-- Type -->
                            <telerik:GridViewDataColumn Header="Type" 
                                                      DataMemberBinding="{Binding Type}"
                                                      IsFilterable="False"
                                                      Width="100"/>

                            <!-- Status with Color Indicator -->
                            <telerik:GridViewColumn Header="Status" Width="120" IsFilterable="False">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Style="{StaticResource StatusIndicatorStyle}"/>
                                            <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>

                            <!-- Balcony -->
                            <telerik:GridViewColumn Header="Balcony" Width="70" IsFilterable="False">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding HasBalcony, Converter={StaticResource BoolToYesNoConverter}}" 
                                                 TextAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>

                            <!-- Price -->
                            <telerik:GridViewDataColumn Header="Price/Night" 
                                                      DataMemberBinding="{Binding PricePerNightUsdFormatted}"
                                                      Width="100"
                                                      IsFilterable="False"
                                                      TextAlignment="Right"/>

                            <!-- Last Maintained -->
                            <telerik:GridViewDataColumn Header="Last Maintained" 
                                                      DataMemberBinding="{Binding LastMaintainedAtFormatted}"
                                                      Width="120"
                                                      IsFilterable="False"
                                                      TextAlignment="Center"/>

                            <!-- Description -->
                            <telerik:GridViewDataColumn Header="Description" 
                                                      DataMemberBinding="{Binding Description}"
                                                      Width="*"
                                                      IsFilterable="False"
                                                      MinWidth="150"/>

                            <!-- Actions Column -->
                            <telerik:GridViewColumn Header="Actions" Width="120" IsFilterable="False">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Edit" 
                                                  Click="EditButton_Click"
                                                  Width="50" Height="25" Margin="2"
                                                  Background="#2E86AB"
                                                  Foreground="White" BorderThickness="0"
                                                  FontSize="10"/>
                                            <Button Content="Del" 
                                                  Click="DeleteButton_Click"
                                                  Width="35" Height="25" Margin="2"
                                                  Background="#E74C3C" Foreground="White" 
                                                  BorderThickness="0" FontSize="10"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>
                        </telerik:RadGridView.Columns>

                        <!-- Row Details Template for expanded view -->
                        <telerik:RadGridView.RowDetailsTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA" Padding="20" Margin="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Room Details" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                            <TextBlock Text="{Binding StringFormat='Created: {0:yyyy-MM-dd HH:mm}', Path=CreatedAt}" Margin="0,2"/>
                                            <TextBlock Text="{Binding StringFormat='Last Updated: {0:yyyy-MM-dd HH:mm}', Path=UpdatedAt}" Margin="0,2"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Quick Actions" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                            <Button Content="Schedule Maintenance" 
                                                  Command="{Binding DataContext.SetMaintenanceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  Margin="0,2" Padding="5"/>
                                            <Button Content="Complete Maintenance" 
                                                  Command="{Binding DataContext.CompleteMaintenanceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  Margin="0,2" Padding="5"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </telerik:RadGridView.RowDetailsTemplate>
                    </telerik:RadGridView>

                    <!-- Loading Overlay -->
                    <Border Grid.Row="1" Background="#80000000" 
                          Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <telerik:RadBusyIndicator IsBusy="{Binding IsLoading}" 
                                                    Content="Loading rooms..."
                                                    Foreground="White"
                                                    FontSize="16"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>