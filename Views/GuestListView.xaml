<UserControl x:Class="NovaStayHotel.Views.GuestListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">

    <UserControl.Resources>
        <!-- Numeric TextBox Style with validation -->
        <Style x:Key="NumericTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="3"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Multi-select ListBox Style -->
        <Style x:Key="MultiSelectListBoxStyle" TargetType="ListBox">
            <Setter Property="SelectionMode" Value="Multiple"/>
            <Setter Property="MaxHeight" Value="100"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Gender indicator style -->
        <Style x:Key="GenderIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMale}" Value="True">
                    <Setter Property="Fill" Value="Blue"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsMale}" Value="False">
                    <Setter Property="Fill" Value="Pink"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Navigation -->
        <telerik:RadRibbonView Grid.Row="0" Height="120">
            <telerik:RadRibbonTab Header="Home">
                <telerik:RadRibbonGroup Header="Navigation">
                    <telerik:RadRibbonButton Text="Dashboard" 
                                           Command="{Binding NavigateToHomeCommand}" 
                                           Size="Large"/>
                    <telerik:RadRibbonButton Text="Rooms" Size="Medium"/>
                    <telerik:RadRibbonButton Text="Reservations" Size="Medium"/>
                </telerik:RadRibbonGroup>
            </telerik:RadRibbonTab>

            <telerik:RadRibbonTab Header="Guests" IsSelected="True">
                <telerik:RadRibbonGroup Header="Guest Actions">
                    <telerik:RadRibbonButton Text="Add Guest" 
                                           Command="{Binding AddGuestCommand}"
                                           Size="Large"/>
                    <telerik:RadRibbonButton Text="Edit Guest" 
                                           Command="{Binding EditGuestCommand}"
                                           Size="Medium"
                                           IsEnabled="{Binding SelectedGuest, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter='Boolean'}"/>
                    <telerik:RadRibbonButton Text="Delete Guest" 
                                           Command="{Binding DeleteGuestCommand}"
                                           Size="Medium"
                                           IsEnabled="{Binding SelectedGuest, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter='Boolean'}"/>
                </telerik:RadRibbonGroup>
                <telerik:RadRibbonGroup Header="Data">
                    <telerik:RadRibbonButton Text="Refresh" 
                                           Command="{Binding RefreshCommand}"
                                           Size="Medium"/>
                    <telerik:RadRibbonButton Text="Export" Size="Medium"/>
                </telerik:RadRibbonGroup>
            </telerik:RadRibbonTab>
        </telerik:RadRibbonView>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Filter Panel -->
            <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="5" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Guest Filters" FontSize="16" FontWeight="Bold" 
                                 Foreground="#2E86AB" Margin="0,0,0,15"/>

                        <!-- Basic Filters -->
                        <TextBlock Text="SEARCH" FontSize="12" FontWeight="Bold" 
                                 Foreground="Gray" Margin="0,0,0,5"/>

                        <!-- Name Filter -->
                        <TextBlock Text="Guest Name" Margin="0,0,0,3"/>
                        <TextBox Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}" 
                               Height="25" Padding="5" Margin="0,0,0,10"
                               ToolTip="Search by guest name (first, middle, or last)"/>

                        <!-- Phone Filter -->
                        <TextBlock Text="Phone Number" Margin="0,0,0,3"/>
                        <TextBox Text="{Binding PhoneFilter, UpdateSourceTrigger=PropertyChanged}" 
                               Height="25" Padding="5" Margin="0,0,0,15"
                               ToolTip="Search by phone number"/>

                        <!-- Demographics -->
                        <TextBlock Text="DEMOGRAPHICS" FontSize="12" FontWeight="Bold" 
                                 Foreground="Gray" Margin="0,0,0,5"/>

                        <!-- Age Range with validation -->
                        <TextBlock Text="Age Range (18-120)" Margin="0,0,0,3"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBox Text="{Binding MinAge, UpdateSourceTrigger=PropertyChanged}" 
                                   Width="60" Style="{StaticResource NumericTextBoxStyle}"
                                   ToolTip="Min Age (18-120)"/>
                            <TextBlock Text=" - " VerticalAlignment="Center" Margin="5,0"/>
                            <TextBox Text="{Binding MaxAge, UpdateSourceTrigger=PropertyChanged}" 
                                   Width="60" Style="{StaticResource NumericTextBoxStyle}"
                                   ToolTip="Max Age (18-120)"/>
                        </StackPanel>

                        <!-- Gender -->
                        <TextBlock Text="Gender" Margin="0,0,0,3"/>
                        <ComboBox ItemsSource="{Binding GenderOptions}"
                                SelectedIndex="{Binding GenderSelectedIndex}"
                                Height="25" Padding="5" Margin="0,0,0,10"/>

                        <!-- Nationality (Multi Select) -->
                        <TextBlock Text="Nationalities (Multi-select)" Margin="0,0,0,3"/>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Margin="0,0,0,15">
                            <ListBox ItemsSource="{Binding Nationalities}"
                                   Style="{StaticResource MultiSelectListBoxStyle}"
                                   MaxHeight="120">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <CheckBox Content="{Binding DisplayName}" 
                                                            IsChecked="{Binding IsSelected}"
                                                            Margin="2" Padding="5,2"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Border>

                        <!-- Active Filters Summary -->
                        <Border Background="#E8F4FD" BorderBrush="#2E86AB" BorderThickness="1" 
                              CornerRadius="3" Padding="8" Margin="0,0,0,10"
                              Visibility="{Binding HasActiveFilters, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="Active Filters:" FontWeight="Bold" FontSize="11" Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding ActiveFiltersText}" FontSize="10" TextWrapping="Wrap" 
                                         Foreground="#2E86AB"/>
                            </StackPanel>
                        </Border>

                        <!-- Search Button -->
                        <Button Content="Search" 
                              Command="{Binding SearchCommand}"
                              Background="#2E86AB" Foreground="White"
                              Padding="10,5" Margin="0,5,0,0"
                              BorderThickness="0" Cursor="Hand"
                              FontWeight="Bold"/>

                        <!-- Clear Filters Button -->
                        <Button Content="Clear Filters" 
                              Command="{Binding ClearFiltersCommand}"
                              Background="#E74C3C" Foreground="White"
                              Padding="10,5" Margin="0,10,0,0"
                              BorderThickness="0" Cursor="Hand"/>

                        <!-- Filter Count -->
                        <TextBlock Text="{Binding FilteredGuestsCount, StringFormat='Showing {0} guests'}" 
                                 HorizontalAlignment="Center" Margin="0,10,0,0"
                                 FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Guests Data Grid -->
            <Border Grid.Column="1" Background="White" CornerRadius="5" 
                  BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#2E86AB" CornerRadius="5,5,0,0">
                        <Grid Margin="15,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Guest Management" 
                                         FontSize="20" FontWeight="Bold" 
                                         Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Guests.Count, StringFormat=' ({0} guests)'}" 
                                         FontSize="14" Foreground="#B0E0E6" 
                                         VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Data Grid -->
                    <telerik:RadGridView Grid.Row="1" 
                                       ItemsSource="{Binding GuestsView}"
                                       SelectedItem="{Binding SelectedGuest}"
                                       AutoGenerateColumns="False"
                                       CanUserFreezeColumns="False"
                                       ShowGroupPanel="False"
                                       IsReadOnly="True"
                                       Margin="0,5,0,0">

                        <telerik:RadGridView.Columns>
                            <!-- Guest Name -->
                            <telerik:GridViewDataColumn Header="Full Name" 
                                                      DataMemberBinding="{Binding FullName}"
                                                      Width="200"
                                                      IsFilterable="False"/>

                            <!-- Gender with Indicator -->
                            <telerik:GridViewColumn Header="Gender" Width="80" IsFilterable="False">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Style="{StaticResource GenderIndicatorStyle}"/>
                                            <TextBlock Text="{Binding GenderDisplay}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>

                            <!-- Age -->
                            <telerik:GridViewDataColumn Header="Age" 
                                                      DataMemberBinding="{Binding Age}"
                                                      Width="60"
                                                      IsFilterable="False"
                                                      TextAlignment="Center"/>

                            <!-- Nationality -->
                            <telerik:GridViewDataColumn Header="Nationality" 
                                                      DataMemberBinding="{Binding Nationality}"
                                                      Width="120"
                                                      IsFilterable="False"/>

                            <!-- Phone Number -->
                            <telerik:GridViewDataColumn Header="Phone" 
                                                      DataMemberBinding="{Binding PhoneNumber}"
                                                      Width="120"
                                                      IsFilterable="False"/>

                            <!-- Email -->
                            <telerik:GridViewDataColumn Header="Email" 
                                                      DataMemberBinding="{Binding EmailAddress}"
                                                      Width="200"
                                                      IsFilterable="False"/>

                            <!-- Date of Birth -->
                            <telerik:GridViewDataColumn Header="Date of Birth" 
                                                      DataMemberBinding="{Binding DateOfBirthFormatted}"
                                                      Width="110"
                                                      IsFilterable="False"
                                                      TextAlignment="Center"/>

                            <!-- Passport -->
                            <telerik:GridViewDataColumn Header="Passport" 
                                                      DataMemberBinding="{Binding PassportNumber}"
                                                      Width="120"
                                                      IsFilterable="False"/>

                            <!-- Actions Column -->
                            <telerik:GridViewColumn Header="Actions" Width="120" IsFilterable="False">
                                <telerik:GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Edit" 
                                                  Click="EditButton_Click"
                                                  Width="50" Height="25" Margin="2"
                                                  Background="#2E86AB"
                                                  Foreground="White" BorderThickness="0"
                                                  FontSize="10"/>
                                            <Button Content="Del" 
                                                  Click="DeleteButton_Click"
                                                  Width="35" Height="25" Margin="2"
                                                  Background="#E74C3C" Foreground="White" 
                                                  BorderThickness="0" FontSize="10"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </telerik:GridViewColumn.CellTemplate>
                            </telerik:GridViewColumn>
                        </telerik:RadGridView.Columns>

                        <!-- Row Details Template for expanded view -->
                        <telerik:RadGridView.RowDetailsTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA" Padding="20" Margin="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Guest Details" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                            <TextBlock Text="{Binding StringFormat='Full Name: {0}', Path=FullName}" Margin="0,2"/>
                                            <TextBlock Text="{Binding StringFormat='Age: {0}', Path=Age}" Margin="0,2"/>
                                            <TextBlock Text="{Binding StringFormat='Nationality: {0}', Path=Nationality}" Margin="0,2"/>
                                            <TextBlock Text="{Binding StringFormat='Email: {0}', Path=EmailAddress}" Margin="0,2"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Contact Information" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                                            <TextBlock Text="{Binding StringFormat='Phone: {0}', Path=PhoneNumber}" Margin="0,2"/>
                                            <TextBlock Text="{Binding StringFormat='Passport: {0}', Path=PassportNumber}" Margin="0,2"/>
                                            <TextBlock Text="{Binding StringFormat='Date of Birth: {0}', Path=DateOfBirthFormatted}" Margin="0,2"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </telerik:RadGridView.RowDetailsTemplate>
                    </telerik:RadGridView>

                    <!-- Loading Overlay -->
                    <Border Grid.Row="1" Background="#80000000" 
                          Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <telerik:RadBusyIndicator IsBusy="{Binding IsLoading}" 
                                                    Content="Loading guests..."
                                                    Foreground="White"
                                                    FontSize="16"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>