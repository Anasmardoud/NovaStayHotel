<Window x:Class="NovaStayHotel.Views.AddEditGuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:converters="clr-namespace:NovaStayHotel.Converters"
        xmlns:local="clr-namespace:NovaStayHotel"
        Title="{Binding WindowTitle}" 
        Height="900" Width="900"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#F8F9FA"
        SizeToContent="WidthAndHeight"
        MinHeight="550" MinWidth="900">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="Control">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource InputStyle}"/>
        <Style TargetType="ComboBox" BasedOn="{StaticResource InputStyle}"/>
        <Style TargetType="DatePicker" BasedOn="{StaticResource InputStyle}">
            <Setter Property="Height" Value="32"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E86AB" CornerRadius="4" Padding="12" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="{Binding WindowTitle}" 
                           FontSize="16" FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="{Binding WindowSubtitle}" 
                           FontSize="11" 
                           Foreground="#B0E0E6" 
                           Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="PERSONAL INFORMATION" 
                               FontSize="11" FontWeight="Bold" 
                               Foreground="#666" Margin="0,0,0,8"/>

                    <!-- First Name -->
                    <TextBlock Text="First Name *" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="35"/>

                    <!-- Middle Name -->
                    <TextBlock Text="Middle Name *" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding MiddleName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="35"/>

                    <!-- Last Name -->
                    <TextBlock Text="Last Name *" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="35"/>

                    <!-- Gender -->
                    <TextBlock Text="Gender" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding GenderOptions}"
                              SelectedIndex="{Binding IsMale, Converter={StaticResource BoolToGenderIndexConverter}}"/>

                    <!-- Date of Birth -->
                    <TextBlock Text="Date of Birth *" Style="{StaticResource LabelStyle}"/>
                    <DatePicker SelectedDate="{Binding DateOfBirthDateTime, Mode=TwoWay}"
                                Height="45"/>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="CONTACT and ADDITIONAL INFO"
                               FontSize="11" FontWeight="Bold" 
                               Foreground="#666" Margin="0,0,0,8"/>

                    <!-- Nationality -->
                    <TextBlock Text="Nationality *" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding Nationalities}"
                              SelectedItem="{Binding Nationality, Mode=TwoWay}" Height="35"/>

                    <!-- Phone Number -->
                    <TextBlock Text="Phone Number *" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Height="35"/>

                    <!-- Email Address -->
                    <TextBlock Text="Email Address" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding EmailAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="35"/>

                    <!-- Passport Number -->
                    <TextBlock Text="Passport Number" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding PassportNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Height="35"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Validation Summary -->
        <Border Grid.Row="1" Grid.ColumnSpan="3"
                Background="#FFF3CD" 
                BorderBrush="#FFEAA7" 
                BorderThickness="1"
                CornerRadius="3"
                Padding="8"
                Margin="0,10,0,0"
                VerticalAlignment="Bottom"
                Height="Auto"
                Visibility="{Binding HasValidationErrors, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="⚠️ Please fix the following errors:" 
                           FontWeight="Bold" 
                           Foreground="#856404" 
                           Margin="0,0,0,4"
                           FontSize="11"/>
                <ItemsControl ItemsSource="{Binding ValidationErrors}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                       Foreground="#856404" 
                                       Margin="5,1"
                                       FontSize="10"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,12,0,0" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Required Fields Note -->
                <TextBlock Grid.Column="0" 
                           Text="* Required fields" 
                           FontSize="10" 
                           Foreground="#666" 
                           VerticalAlignment="Center"/>

                <!-- Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Cancel" 
                            Command="{Binding CancelCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Width="75" Height="32"
                            Background="#6C757D" 
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,0,8,0"
                            Cursor="Hand"
                            FontSize="12"/>

                    <Button Content="{Binding SaveButtonText}" 
                            Command="{Binding SaveCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Width="75" Height="32"
                            Background="#28A745" 
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            IsEnabled="{Binding CanSave}"
                            FontSize="12">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#218838"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#CCC"/>
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="3" 
                Background="#80000000"
                Visibility="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <telerik:RadBusyIndicator IsBusy="{Binding IsSaving}" 
                                          Content="{Binding LoadingText}"
                                          Foreground="White"
                                          FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>